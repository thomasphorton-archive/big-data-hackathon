extends landing

block javascript
  script(type='text/javascript', src= "/js/land-heatmaps.js")

block content
  div.container
    div.row
      div.span1.column
      div.span10.column
        h1=title
        
      div.row
        div.span4.column
          label Store Number:
          select.span3#store
            option(value="all") All Stores
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
        div.span4.column
          label Segment:
          select.span3#segment
            option(value="all") All Segments
            option(value="beer") Beer
            option(value="wine") Wine
            option(value="deli") Deli
            option(value="bakery") Bakery
        div.span4.column
          label Weighted By:
          select.span3#x
        
          
      div.row
        div.span4.column
        div.span4.column
          a.btn.btn-primary.btn-large.generate(href="#") Plot it!